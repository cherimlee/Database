var nMenuFloatingLayerOffsetTop = 0;
var welDetailViewContainer = $Element($$.getSingle('.viewer_container'));
var welDetailViewArea = $Element($$.getSingle('.section_area_viewer'));

var oRecentNovel = new RecentNovel();
